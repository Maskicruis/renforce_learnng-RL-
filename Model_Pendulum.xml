<mujoco model="inverted_pendulum">
    <compiler inertiafromgeom="true"/>

    <!-- 世界环境设置 -->
    <option timestep="0.002" iterations="50" integrator="RK4" gravity="0 0 -9.81"/>

    <default>
        <joint damping="0.05" armature="0.01"/>
        <geom contype="0" conaffinity="0" density="1000"/>
    </default>

    <worldbody>
        <!-- 基座（固定） -->
        <body name="base" pos="0 0 0">
            <geom name="base_geom" type="box" size="0.2 0.2 0.05" rgba="0.8 0.8 0.8 1"/>
            <body name="pole" pos="0 0 0.05">
                <!-- 铰链关节，绕y轴自由旋转，无角度限制 -->
                <joint name="hinge" type="hinge" axis="0 1 0" pos="0 0 0" damping="0.05"/>
                <!-- 摆杆，初始位置略微偏离垂直 -->
<!--                <geom name="pole_geom" type="capsule" fromto="0 0 0 0 0 0.5" size="0.02" rgba="0 0.7 0.7 1"/>-->
                <geom name="pole_geom" type="capsule" fromto="0 0 0 0.05 0 0.5" size="0.02" rgba="0 0.7 0.7 1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!--主动单元，用于后续控制 -->
        <motor name="motor" joint="hinge" ctrlrange="-2 2" ctrllimited="true"/>
    </actuator>

    <sensor>
        <!-- 传感器 -->
        <jointpos name="pole_angle" joint="hinge"/>
        <jointvel name="pole_velocity" joint="hinge"/>
    </sensor>

</mujoco>
